<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:overScrollMode="never"
    android:padding="20dp"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_file"
        android:padding="10dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEmail"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@color/design_default_color_primary"
            android:text="@string/submit" />

        <EditText
            android:id="@+id/edtRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:hint="@string/rollNO"
            android:textColor="@color/design_default_color_primary" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtRoll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:hint="@string/email"
            android:textColor="@color/design_default_color_primary" />

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgStudent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:hint="@string/stdName"
            android:textColor="@color/design_default_color_primary" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgStudent"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_man"
            app:civ_border_color="@color/design_default_color_primary"
            app:civ_border_width="2dp" />
    </RelativeLayout>
</RelativeLayout>